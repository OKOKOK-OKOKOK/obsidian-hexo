{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    "types": ["node", "obsidian"],     // 引入 Node.js 和 Obsidian 类型声明

    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src"],                  // 编译 src 下的所有 TS 文件
  "exclude": ["node_modules", "dist"]  // 排除 node_modules 和 dist
}
